# Setup SQL db environment
local dbfile="${ZDOTDIR:-$HOME}/.zshdb"
if [[ ${ZDOTDIR:-$HOME} != $HOME ]]
then
  dbfile=$ZDOTDIR/.db
fi
if [[ -r $dbfile ]]
then
  [[ -n $ZCONFIGDEBUG ]] && echo "Loading config file ${dbfile:t}"
  . $dbfile
fi

