#eval compdef -n _make mk
# ZSH function file
# Make part of the cashsec system
# Usage: make [<options>]
#
# $Id$

if [[ -n $(whence g++ 2>/dev/null) ]]
then
  clearmake -f /vobs/odyssey/shared/config/makemakefile_gcc &&
    PATH=$PATH:. clearmake "$@"
else
  clearmake -f /vobs/odyssey/shared/config/makemakefile &&
    PATH=$PATH:. clearmake "$@"
fi
