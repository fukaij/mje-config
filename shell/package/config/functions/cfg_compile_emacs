#eval compdef -n _parse_opts cfg_compile_emacs
# ZSH function file
# Written by Martin Ebourne
# Part of the Config package
# Compile emacs directory
#
# $Id: cfg_compile_emacs,v 1.4 2001/08/09 17:45:30 mebourne Exp $

emulate -LR zsh

local -A opts
parse_opts - opts -- "$argv[@]" <<'EOF' || return 1
Description:
Compile emacs directory.

Usage:
cfg_compile_emacs [options] <directory>

Options:
  -h, --help			Provide this help
				# --help | -h

Arguments:
  <directory>			The directory to compile
				# directory : directory
EOF

emacs --batch --user=$USER --eval "(install \"$opts[directory]/layout.el\")"
