# ZSH configuration file
# Executed when the clearcase package is included
# Setup for clearcase package
# Written by Martin Ebourne
#
# $Id: setup,v 1.2 2001/02/15 11:56:02 mebourne Exp $

if [[ -n "$CLEARCASE_ROOT" ]]
then
  CLEARCASE_VIEW="<${CLEARCASE_ROOT#/view/view_}>"
fi

add_functions_directory package/clearcase/functions

alias ct=cleartool

compdef -a _cleartool cleartool
