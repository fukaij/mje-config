# ZSH function file
# Part of the SQL Oracle package
# Set up connection to Oracle database
# Usage: ora <connection-info>
#
# $Id: ora,v 1.1 2002/04/10 08:42:42 mebourne Exp $

local user="$argv[1]"

local server
if [[ $user == *@* ]]
then
  server="${user##*@}"
  user=${user%@*}
fi

local password
if [[ $user == */* ]]
then
  password="${user##*/}"
  user=${user%/*}
fi

sqlset vendor=oracle user="$user" password="$password" server="$server"
_sql_prompt="$user${server:+@$server}"
