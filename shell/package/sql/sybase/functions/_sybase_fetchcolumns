# ZSH function file
# Part of the SQL Sybase package
# Fetch and return the list of columns for the current table
# For use only by the SQL packages
#
# $Id: _sybase_fetchcolumns,v 1.1 2001/02/26 18:38:53 mebourne Exp $

local table=$1

{
  echo "set nocount on"
  echo "go"
  if [[ -n $_sql_parameters[database] ]]
  then
    echo "use $_sql_parameters[database]"
    echo "go"
  fi
  echo "select c.name from syscolumns c, sysobjects t"
  echo "where c.id=t.id and t.name like '$table' and t.uid=user_id()"
  echo "go"
} | _sybase_rawsql | tail +3
