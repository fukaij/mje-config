# ZSH function file
# Part of the SQL base package
# Complete on the column names from the given list of tables
# For use only by the SQL packages
#
# $Id: _sql_complete_column_names,v 1.2 2001/05/30 08:13:43 mebourne Exp $

local -aU tables
tables=($argv[*])

if (( $#tables ))
then
  local table
  for table in $tables
  do
    _sql_get_column_names $table
    _wanted columns expl 'database columns' compadd -a _sql_columns_$table
  done
else
  _sql_get_column_names
  _wanted columns expl 'database columns' compadd -a _sql_columns_
fi
