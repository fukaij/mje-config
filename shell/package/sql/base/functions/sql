# ZSH function file
# Part of the SQL base package
# Execute an SQL command
# Usage: sql <sql-command> ...
#
# $Id: sql,v 1.7 2001/10/12 16:19:09 mebourne Exp $

eval $_sql_intro

if (( ARGC ))
then
  local format_v colour_v formatcmd
  _sql_getparam format_v format none
  if [[ $format_v != none ]]
  then
    _sql_getparam colour_v colour off

    formatcmd="| $_sql_formatprogram --colour=$colour_v --width=$COLUMNS --width-auto $format_v"
  fi
  eval _sql_call execute "\$argv[@]" $formatcmd
else
  _sql_call interactive
fi
